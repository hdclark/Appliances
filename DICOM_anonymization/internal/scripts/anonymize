tagstomodify+=("(0040,0253)=Anonymous") #     PerformedProcedureStepID
tagstomodify+=("(0040,0254)=Anonymous") #     PerformedProcedureStepDescription

tagstomodify+=("(3002,0004)=Anonymous") #     RTImageDescription
tagstomodify+=("(3002,0004)=Anonymous") #     RTImageDescription
tagstomodify+=("(3002,0020)=Anonymous") #     RadiationMachineName
tagstomodify+=("(300a,00b2)=Anonymous") #     TreatmentMachineName
tagstomodify+=("(300a,0002)=Anonymous") #     RTPlanLabel
tagstomodify+=("(300a,0003)=Anonymous") #     RTPlanName
tagstomodify+=("(300a,0006)=${todaysdate}") #    RTPlanDate
tagstomodify+=("(300a,0007)=${todaystime}") #    RTPlanTime
tagstomodify+=("(300a,0016)=Anonymous") #     DoseReferenceDescription


# Whitelist files that are supported. Place a link for each to a working directory and disregard
# the other files.
printf "\n"
printf "Whitelisting files to anonymize based on modality.\n"
printf "This step is necessary because gdcmanon refuses to operate on unrecognized files.\n"
printf "It may take a while because every file needs to be loaded and parsed\n"
printf "Please wait...\n"
printf "\n"
WORKDIR="$(mktemp -d)"
trap "rm -rf $WORKDIR" EXIT
(
## Find files and pack them into a Bash array.
## Note: From https://stackoverflow.com/a/23357277 circa 20180511.
#ALLFILES=()
#while IFS=  read -r -d $'\0'; do
#    ALLFILES+=("$REPLY")
#done < <(find -P "${thedir}" -type f -print0)

cd "${thedir}"
for i in * ; do
    files=("${i}")
    tags=(Modality)
    modality=$( get_keyvalue files tags )
    if [[ "$modality" =~ ^(CT|MR|PT|RTSTRUCT|RTIMAGE|REG|RTPLAN|RTDOSE|RTRECORD|MOTIONMTWAVEFORM)$ ]] ; then
        ln -s "$(pwd)/${i}"  "${WORKDIR}/${i}"
    else
        printf -- "Ignoring file '${i}'.\n" 2>&1
    fi
done
)


# Perform a basic anonymization. Note that this is not really sufficient for most purposes.
#
# Note: This pass is necessary to re-issue synchronized StudyInstanceUIDs and SeriesInstanceUIDs.
#       For some reason DCMtk does not synchronize them.
#
# Note: With the homemade UID anony-synchronizer below, this pass might not be needed.
#       Consider disabling if more limitations of its use is discovered.
#
#printf "\n"
#printf 'Performing basic anonymization to re-write StudyInstanceUIDs and SeriesInstanceUIDs.\n'
#printf "This step is performed by gdcmanon.\n"
#printf 'It can take a while because all files are copied during the anonymization process.\n'
#printf "Please wait...\n"
#printf "\n"
#apasswd=$( openssl rand -base64 128 | head -c 64 )
#gdcmanon -r --continue -p "${apasswd}" -V -i "${WORKDIR}" -o "${anondir}"/
# OR, you can fallback (without any anonymization) to:
rsync -rvPLzz "${WORKDIR}/" "${anondir}/"



# Invoke DCMtk to erase and modify tags.
#
# Note: They are packed this way to avoid weirdness with quotation.
printf "\n"
printf 'Performing more specific anonymization now.\n'
printf "This step re-writes or erases tags that are likely to contain personally identifying info.\n"
printf "It is performed by DCMtk.\n"
printf "Please wait...\n"
printf "\n"

invocation=()
invocation+=(dcmodify)
#invocation+=(--verbose)
#invocation+=(--gen-stud-uid) # Does not cache UIDs across the whole dataset!
#invocation+=(--gen-ser-uid)  # Does not cache UIDs across the whole dataset!
#invocation+=(--gen-inst-uid) # Does not cache UIDs across the whole dataset!
#invocation+=(--erase-private)
invocation+=(--no-backup)
invocation+=(--quiet)
invocation+=(--ignore-missing-tags)
invocation+=(--ignore-un-values)
invocation+=(--ignore-errors)
invocation+=("${anondir}"/*)

for i in "${tagstoerase[@]}" ; do
    invocation+=(--erase-all)
    invocation+=("${i}")
done
for i in "${tagstomodify[@]}" ; do
    invocation+=(--modify-all)
    invocation+=("${i}")
done
"${invocation[@]}"    # <--- invoked here!


# Synchronously anonymize UIDs not anonymized by the above.
printf "\n"
printf "Performing a UID synchronous anonymization.\n"
printf "UIDs are extracted from the files and files are then round-tripped DCM->XML->DCM.\n"
printf "Regex replacements are applied to the XML.\n"
printf "Because the files can be large (especially files with large binary data), this can take a while.\n"
printf "Please wait...\n"
printf "\n"
(
UIDDIR="$(mktemp -d)"
files=("${anondir}"/*)
get_keyvalue files UIDtags | sort -u > "${UIDDIR}"/all_UIDs 

while read aUID ; do
    escapedUID=$( printf -- "${aUID}" | sed -e 's@[.]@[.]@g' )
    printf -- "s/[>]${escapedUID}/>$(genericUID)/g\n" >> "${UIDDIR}"/replacements
done < "${UIDDIR}"/all_UIDs

N_replacements=$( wc -l "${UIDDIR}"/replacements | cut -f 1 -d ' ' )
printf "Found ${N_replacements} UIDs to replace.\n"

N_files=$( ls "${anondir}"/* | wc -l | cut -f 1 -d ' ' )
progressfile=$(mktemp)
find "${anondir}"/ -mindepth 1 -maxdepth 1 -print0 |
    xargs -0 -I '{}' -P $(nproc || echo 2) -n 1 -r  bash -c '
        tmpfile=$(mktemp)
        mv '"'{}'"' "${tmpfile}" 
        dcm2xml --load-all --dcmtk-format --write-binary-data "${tmpfile}" |
            sed -f "'"${UIDDIR}"'"/replacements |
            xml2dcm --group-length-recalc - '"'{}'"' 
        chown --reference="${tmpfile}" '"'{}'"'
        rm "${tmpfile}"

        # Report progress using a file as a semaphore.
        printf "\n" >> '"${progressfile}"'
        printf "  Completed file $(wc -l '"${progressfile}"' | cut -f 1 -d" ") of '"${N_files}"'...\n"
    '
rm -rf "${UIDDIR}"
rm "${progressfile}"
)
chown -R --reference="${WORKDIR}" "${anondir}"


# Rename the files.
#
# Note: This step is necessary because the filenames commonly contain the original UIDs / pre-anon data.
printf "\n"
printf "Files are now being renamed to strip identifying info from the filenames.\n"
printf "Please wait...\n"
printf "\n"
(
c=0
cd "${anondir}"
for i in * ; do
    files=("${i}")
    tags=(Modality)
    modality=$( get_keyvalue files tags )
    newname=$( printf "${modality}_%06d.dcm" "$c" )
    mv -n "${i}" "${newname}"
    c=$(( 1 + $c ))
done
)


###############################################################################################################
####### Anonymization complete. Now generating report for inspection.                                   #######
###############################################################################################################
# Note: This could be optional.

# Dump all encountered tags in all files for inspection.
(
printf "\n"
printf 'Now gathering information about DICOM files for your inspection.\n'
printf 'This listing contains all tags encountered in the anonymized files.\n' 
printf 'Thoroughly inspect this file for personal information.\n' 
printf "Please wait...\n"
printf "\n"
for i in "${anondir}/"*dcm ; do 
    dcmdump "$i"
done | 
  sed -e 's/^[ ]*//' -e 's/[ ]*$//' -e 's/  / /g' | 
  sort -u 
)


# List the key UIDs for Dump all encountered tags in all files for inspection.
(
printf "\n"
printf 'Now gathering information about DICOM files for your inspection.\n'
printf 'This listing contains all UIDs present in INPUT and OUTPUT files.\n' 
printf 'Thoroughly inspect this file for personal information.\n' 
printf "\n"
printf 'List of all key UIDs present in INPUT files...\n' 
printf "Please wait...\n"
dcmdump "${WORKDIR}/"* | 
  grep -i 'Series.*UID\|Study.*UID\|Frame.*Ref.*UID' | 
  sed -e 's/^[ ]*//' -e 's/[ ]*$//' -e 's/  / /g' | 
  sort | uniq -c
printf '\n\n'
printf 'List of all key UIDs present in OUTPUT files...\n' 
printf "Please wait...\n"
dcmdump "${anondir}/"* | 
  grep -i 'Series.*UID\|Study.*UID\|Frame.*Ref.*UID' | 
  sed -e 's/^[ ]*//' -e 's/[ ]*$//' -e 's/  / /g' | 
  sort | uniq -c
)


printf "Done\n"

